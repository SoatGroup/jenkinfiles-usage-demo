// WIP
pipeline {

    agent any

    options {
        timestamps()
        disableConcurrentBuilds()
        skipStagesAfterUnstable()
        timeout(time: 1, unit: 'MINUTES')
        buildDiscarder(logRotator(numToKeepStr: '1'))
    }

    stages {
        stage('HELLO WORLD') {
            steps {
                echo 'Hello from Jenkinsfile !'
            }
            post {
                success {
                    echo 'I just hear a Hello !'
                }
            }
        }
        stage('RANDOM') {
            steps {
                echo 'Hello from Jenkinsfile !'
            }
            post {
                success {
                    echo 'I just hear a Hello !'
                }
            }
        }
    }

    post {
        always       { echo 'Always run' }
        failure      { echo 'Run if the build status is [failure]' }
        success      { echo 'Run if the build status is [success]' }
        aborted      { echo 'Run if the build status is [aborted]' }
        fixed        { echo 'Run if the build status is [success] and the previous build has a other status' }
        changed      { echo 'Run if the build status is different than the previous build' }
        regression   { echo 'Run if the build status is [failure, unstable, aborted] and the previous build was [success]'}
        unstable     { echo 'Run if the build status is [unstable] (test failure)' }
        unsuccessful { echo 'Run if the build status is not [success]' }
    }
}